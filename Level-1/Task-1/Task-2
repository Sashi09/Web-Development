<body>

    <h1 style="text-align: center; color: #1f2937; margin-bottom: 30px;">
        My JavaScript Projects (Cognifyz L1 Task 2)
    </h1>

    <div class="projects-container">

        <div class="project-card">
            <h2>Interactive Button</h2>
            <p>Changes button's gradient on click (like in your sketch).</p>
            <button id="colorButton" onclick="changeGradient()">
                click me
            </button>
        </div>

        <div class="project-card" id="greeting-card">
            <h2>Greeting Test</h2>
            <div id="current-greeting"></div>
            <p>Click below to open the greeting alert box.</p>
            <button onclick="showGreeting()">
                Open Greeting
            </button>
        </div>

        <div class="project-card" id="calculator-card">
            <h2>Basic Calculator</h2>
            <input type="number" id="num1" placeholder="First Number">
            <input type="number" id="num2" placeholder="Second Number">
            <button onclick="addNumbers()">Add</button>
            <h3 id="calculator-result">Result: </h3>
        </div>

    </div>

    <script>
        
        const gradients = [
            'linear-gradient(to right, #3F5EFB 0%, #FC466B 100%)', 
            'linear-gradient(to right, #833AB4 0%, #FD1D1D 50%, #FCB045 100%)', 
            'linear-gradient(to right, #00C9FF 0%, #92FE9D 100%)', 
            'linear-gradient(to right, #E0E 0%, #30E 100%)' 
        ];
        let gradientIndex = 0;

        function changeGradient() {
            const button = document.getElementById('colorButton');
            button.style.backgroundImage = gradients[gradientIndex];
            
            gradientIndex++;

            if (gradientIndex >= gradients.length) {
                gradientIndex = 0;
            }
        }
        
        function getGreeting() {
            const currentHour = new Date().getHours();
            if (currentHour >= 5 && currentHour < 12) {
                return 'Good Morning! â˜€ï¸';
            } else if (currentHour >= 12 && currentHour < 17) {
                return 'Good Afternoon! â˜•';
            } else if (currentHour >= 17 && currentHour < 21) {
                return 'Good Evening! ðŸŒ†';
            } else {
                return 'Hello Night Owl! ðŸ¦‰';
            }
        }
        
        function showGreeting() {
           
            alert(getGreeting());
        }

        document.getElementById('current-greeting').textContent = getGreeting();
        
        function addNumbers() {
            const number1 = parseFloat(document.getElementById("num1").value);
            const number2 = parseFloat(document.getElementById("num2").value);

            if (isNaN(number1) || isNaN(number2)) {
                document.getElementById("calculator-result").innerText = "Result: âš ï¸ Invalid numbers!";
                return;
            }

            const sum = number1 + number2;
            document.getElementById("calculator-result").innerText = `Result: ${sum}`;
        }
    </script>
