<script>
    // Get the slides wrapper element
    const slidesWrapper = document.getElementById('slides-wrapper');
    // The number of unique slides
    const slideCount = 4;
    // Current slide index (0-indexed: 0 is the first slide)
    let slideIndex = 0; 

    // Function to change the slide when a button is clicked
    function plusSlides(n) {
        // Calculate the new index
        slideIndex += n;

        // --- Boundary Checks ---
        // If the new index goes past the last slide (index 3), wrap around to 0
        if (slideIndex >= slideCount) {
            slideIndex = 0;
        }
        // If the new index goes below the first slide (index 0), wrap around to the last slide (3)
        if (slideIndex < 0) {
            slideIndex = slideCount - 1;
        }

        // Calculate the percentage offset needed
        // Slide 0: 0% offset
        // Slide 1: -25% offset
        // Slide 2: -50% offset
        // Slide 3: -75% offset
        const offset = -slideIndex * 100 / slideCount;

        // Apply the transformation to move the slide strip
        slidesWrapper.style.transform = `translateX(${offset}%)`;
    }

    // Initialize the slideshow to the first slide
    plusSlides(0);
</script>

