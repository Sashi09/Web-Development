        /* --- Mobile-Specific Styles (Media Query) --- */
        @media (max-width: 768px) {
            header {
                flex-wrap: wrap; /* Allow items to wrap to next line */
            }

            .logo {
                flex-basis: 50%; /* Take up half width on mobile */
                text-align: left;
                order: 1;
            }

            .menu-btn {
