  <script>
    function toggleMenu() {
      const menu = document.getElementById("myLinks");
      if (menu.style.display === "flex" || menu.style.display === "block") {
        menu.style.display = "none";
      } else {
        menu.style.display = "flex";
      }
    }
  </script>
